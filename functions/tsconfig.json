{
	"compilerOptions": {
		"lib": [
			"es6",
			"dom",
			"es2019"
		],
		"module": "commonjs",
		"noImplicitReturns": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedLocals": false,
		"outDir": "../dist",
		"sourceMap": true,
		"strict": true,
		"target": "es2018",
		"forceConsistentCasingInFileNames": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": [
		"index.ts",
		"firestore",
		"ogpImage",
		"models",
		"tasks",
		".eslintrc.js"
	]
}